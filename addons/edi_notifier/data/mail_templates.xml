<odoo>
  <data noupdate="1">
    <record id="email_template_edi_document_received" model="mail.template">
      <field name="name">EDI Document Received</field>
      <field name="model_id" ref="edi.model_edi_document"/>
      <field name="auto_delete" eval="True"/>
      <field name="subject">${object.doc_type_id.name} ${object.name} received</field>
      <field name="email_from">no-reply@udes.io</field>
      <field name="reply_to">no-reply@udes.io</field>
      <field name="email_to"></field>
      <field name="is_edi_template" eval="True"/>
      <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

<p>${object.doc_type_id.name} ${object.name} has been successfully received at ${format_tz(object.create_date)} and is now being processed.</p>
<br/>
<p>This is an automated email and replies will not be monitored.</p>
</div>
      ]]></field>
    </record>
    <record id="email_template_edi_document_not_received" model="mail.template">
        <field name="name">EDI Document Not Received</field>
        <field name="model_id" ref="edi.model_edi_document_type"/>
        <field name="auto_delete" eval="True"/>
        <field name="subject">${object.name} not received</field>
        <field name="email_from">no-reply@udes.io</field>
        <field name="reply_to">no-reply@udes.io</field>
        <field name="email_to"></field>
        <field name="is_edi_template" eval="True"/>
        <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

<p>No ${object.name} has been received today.</p>
<br/>
<p>This is an automated email and replies will not be monitored.</p>
</div>
        ]]></field>
    </record>
  </data>
</odoo>